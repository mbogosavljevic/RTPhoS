param rtphosdef
 pathdefs    entry {File containing new settings}    "/home/milan/Pipeline/rtphos.defaults" 
 pathdata    entry {Raw data frames}		     "/home/milan/Pipeline/data"            
 pathbias    entry {Bias frames for calibration}     "/home/milan/Pipeline/bias"            
 pathdark    entry {Dark frames for calibration}     "/home/milan/Pipeline/dark"            
 pathflat    entry {Flat frames for calibration}     "/home/milan/Pipeline/flat"            
 stringbias  entry {bias frames wildcard}	     "*bias*"                                      
 stringdark  entry {dark frames wildcard}	     "*dark*"                                      
 stringflat  entry {flat frames wildcard}	     "*flat*"                                      
 namebias    entry {Masterbias filename}	     "masterbias.fits"                             
 namedark    entry {Masterdark filename}	     "massterdark.fits"                            
 nameflat    entry {Masterflat filename}	     "masterflat.fits"                             
 filejpl     entry {path to JPL Ephemeris file}	     "/home/milan/RTPhoS/Timing/jpleph.dat"        
 fileleap    entry {path to leap seconds data file}  "/home/milan/RTPhoS/Timing/leap.dat"          
 cprefix     entry {Prefix for calibrated files}     "c_"                                          
 sradius     entry {Search radius for optimal centroiding} 5.0
 aradius     entry {Aperature radius for photometry} 10.0 
 cradius     entry {PSF Clipping radius for optimal photom} 5.0
 starnumber  entry {Star number to optimize photometry for} 1
 skyskew     entry {Sky profile skew for optimal photometry} -1  
 skyfit      entry {Sky fitting switch for optimal photometry} -1
 gain        entry {Instrument Gain e-/ADU} 10.0
 verbose     checkbox {Verbose output switch} 1
endparam

RTPhoS Settings
*
menu
$param(rtphosdef); write_rtphos_defaults.py $pathdefs $pathdata $pathbias $pathdark $pathflat $stringbias $stringdark $stringflat $namebias $namedark $nameflat $filejpl $fileleap $cprefix $sradius $aradius $cradius $starnumber $skyskew $skyfit $gain $verbose | $text

RUN RTPHOS
*
menu
xterm -sb -sl 2000 -e "/home/milan/RTPhoS/run_rtphos.py $xpa_method ; read dummy"
