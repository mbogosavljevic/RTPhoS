param rtphosdef
 pathrtphos  entry {RTPhoS location}        "/home/milan/RTPhoS"
 pathdefs    entry {RTPhoS settings}        "/home/milan/Pipeline/rtphos.defaults"
 pathlog     entry {RTPhoS logfile}         "/home/milan/Pipeline/rtphos.log"
 pathans     entry {DS9 Analysis settings}  "/home/milan/Pipeline/rtphos.ans"
 pathdata    entry {Raw data frames}	    "/home/milan/Pipeline/data"
 pathbias    entry {Bias frames for calibration}     "/home/milan/Pipeline/bias"            
 pathdark    entry {Dark frames for calibration}     "/home/milan/Pipeline/dark"            
 pathflat    entry {Flat frames for calibration}     "/home/milan/Pipeline/flat"            
 stringbias  entry {bias frames wildcard}	     "*bias*"                                      
 stringdark  entry {dark frames wildcard}	     "*dark*"                                      
 stringflat  entry {flat frames wildcard}	     "*flat*"                                      
 namebias    entry {Masterbias filename}	     "masterbias.fits"                             
 namedark    entry {Masterdark filename}	     "massterdark.fits"                            
 nameflat    entry {Masterflat filename}	     "masterflat.fits"                             
 cprefix     entry {Prefix for calibrated files}     "c_"                                          
 sradius     entry {Search radius for optimal centroiding} 5.0
 aradius     entry {Aperature radius for photometry} 10.0 
 cradius     entry {PSF Clipping radius for optimal photom} 5.0
 starnumber  entry {Star number to optimize photometry for} 1
 skyskew     entry {Sky profile skew for optimal photometry} -1  
 skyfit      entry {Sky fitting switch for optimal photometry} -1
 gain        entry {Instrument Gain e-/ADU} 10.0
 verbose     checkbox {Verbose output switch} 1
 tsleep      entry {Sleep time before checking for new frames [s]} 3
endparam

param gifparams
 wildcard entry {Commong wildcard string for PNG images} "Q*png"
 nframes  entry {Number of last N frames to loop} 5
endparam

param sourceparams
 source entry {Choose source name} "target"
 comp1  entry {Choose comp1 name [required]}  "C-1"
 comp2  entry {Choose comp2 name [optional/"none"]}  "none"
 comp3  entry {Choose comp3 name [optional/"none"]}  "none"
 nlast  entry {include N last measurements} 0
endparam

RTPhoS Settings
*
menu
$param(rtphosdef);  $param(gifparams);  $param(sourceparams); xterm -hold -sb -sl 2000 -e bash -c "$pathrtphos/write_rtphos_defaults.py $pathrtphos $pathdefs $pathlog $pathans $pathdata $pathbias $pathdark $pathflat $stringbias $stringdark $stringflat $namebias $namedark $nameflat $cprefix $sradius $aradius $cradius $starnumber $skyskew $skyfit $gain $verbose $wildcard $nframes $tsleep $source $comp1 $comp2 $comp3 $nlast" 

Run RTPhoS
*
menu
$param(rtphosdef); xterm -hold -sb -sl 2000 -e "tcsh -c \"python -u $pathrtphos/run_rtphos.py $xpa_method $pathdefs |& tee $pathlog\" "

Fits to Animated GIF
*
menu
$param(gifparams); $param(rtphosdef); xterm -hold -sb -sl 2000 -e bash -c "$pathrtphos/loop_gif.py $filename $wildcard $nframes $tsleep"

Photometry Monitor
*
menu
$param(sourceparams); $param(rtphosdef); xterm -hold -sb -sl 2000 -e bash -c "$pathrtphos/phot_monitor.py $pathlog $source $comp1 $comp2 $comp3 $nlast $tsleep"
